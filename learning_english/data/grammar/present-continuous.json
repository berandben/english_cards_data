            "type": "formulas",
            "blocks": [
                {
                    "type": "code-block",
                    "label": "",
                    "content": "",
                    "items": [
                        "Subject + am/is/are + Verb-ing",
                        "She is reading a book"
                    ],
                    "headers": [],
                    "rows": [],
                    "style": "",
                    "value": "",
                    "description": ""
                },
                {
                    "type": "code-block",
                    "label": "",
                    "content": "",
                    "items": [
                        "Subject + am/is/are + not + Verb-ing",
